@model IEnumerable<Lab2BDDomain.Model.Product>

@{
    ViewData["Title"] = "Products not ordered by client and not produced more than X in factories";
}

<div class="text-center">
    <h1 class="display-4">Products Not Ordered by Client and Not Produced More Than X in Factories</h1>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
    else if (Model != null && Model.Any())
    {
        <h2>Found Products:</h2>
        <ul class="list-group">
            @foreach (var product in Model)
            {
                <li class="list-group-item">
                    <strong>Product ID:</strong> @product.Id <br />
                    <strong>Product Name:</strong> @product.ProductName <br />
                    <strong>Product Description:</strong> @product.ProductDescription <br />
                    <strong>Market Price:</strong> @product.MarketPrice <br />
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-warning">No products found that match the criteria.</div>
    }
</div>
