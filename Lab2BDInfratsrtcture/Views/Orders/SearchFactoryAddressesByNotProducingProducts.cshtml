@model IEnumerable<string>

@{
    ViewData["Title"] = "Factory Addresses by Not Producing Products";
}

<div class="text-center">
    <h1 class="display-4">Factory Addresses by Not Producing Products</h1>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning">@ViewBag.Message</div>
    }
    else if (Model != null && Model.Any())
    {
        <h2>Found Factory Addresses:</h2>
        <ul class="list-group">
            @foreach (var address in Model)
            {
                <li class="list-group-item">
                    <strong>Address:</strong> @address
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-warning">No factories found that do not produce the specified products.</div>
    }
</div>
